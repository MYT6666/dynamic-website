<% 
    const title = '首页';
    const body_content = `
        <h2>最新文章</h2>
        <div class="posts-grid">
            ${posts.map(post => `
                <div class="post-card">
                    <h3><a href="/post/${post.id}">${post.title}</a></h3>
                    <div class="post-meta">
                        <span>作者：${post.author}</span>
                        <span>日期：${post.date}</span>
                    </div>
                    <p>${post.content.substring(0, 100)}...</p>
                    <a href="/post/${post.id}" class="read-more">阅读更多</a>
                </div>
            `).join('')}
        </div>
    `;
%>
<%- include('layout', { title, body_content }) %>